<div class="bg-base-200">
    <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
        <div class="alert alert-error shadow-lg max-w-md mx-auto"><%= el.msg %></div>
        <% }) %> <% } %> <% if (locals.messages.info) { %> <%
        messages.info.forEach( el => { %>
        <div class="alert alert-error mt-5"><%= el.msg %></div>
        <% }) %> <% } %>
</div>


<div class="hero min-h-screen bg-base-200">
    <div class="hero-content flex-col lg:flex-row-reverse">
      <div class="ml-10 text-center lg:text-left">
        <h1 class="text-5xl font-bold">Work that Revolves Around You</h1>
        <p class="py-6">Seamlessly integrate work into your life with Helping Hands â€“ the platform that lets self-contract workers reserve events that align with their schedule.</p>
      </div>
      <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
        <div class="card-body">
            <form action="/login" method="POST">
                <div class="form-control">
                    <label for="exampleInputEmail1" class="form-label mb-2">Email Address</label>
                    <input type="email" class="form-control input input-bordered" id="exampleInputEmail1" placeholder="Email" aria-describedby="emailHelp" name="email"/>
                  </div>
                  <div class="mt-3 form-control">
                    <label for="exampleInputPassword1" class="form-label mb-2">Password</label>
                    <input type="password" class="form-control input input-bordered" id="exampleInputPassword1" placeholder="Password" name="password"/>
                    <label class="label">
                      <a href="#" class="label-text-alt link link-hover">Forgot password?</a>
                    </label>
                  </div>
                  <div class="form-control mt-6">
                    <button type="submit" class="btn btn-primary">Login</button>
                  </div>
                  <hr class="border-b border-gray-300 my-6">
                  <div class="form-control mt-6">
                    <a href="/signup" class="btn btn-accent">Register</a>
                  </div>
            </form>
        </div>
      </div>
    </div>
