<%- include('partials/header') -%>
<div class="container">
  <div class="row my-5">
      <div class="col-6">
          <div>
              <p><strong>Name</strong>: <%= user.name %></p>
              <p><strong>Email</strong>: <%= user.email %></p>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
          </div>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(var i=0; i<events.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/events/<%= events[i]._id%>">
              <h2><%= events[i].eventName %></h2>
              <img class="img-fluid" src="<%= events[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/events">Return to Feed</a>
        </div>  
      </div>  
    </div>
  </div>
</div>

<script>
  let profileLink = document.querySelector('#profilelink');
  profileLink.classList.add('active'); 
</script>

<%- include('partials/footer') -%>