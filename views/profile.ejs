<%- include('partials/header') -%>
<div class="container">
  <div class="row my-5">
      <div class="col-6">
          <div>
              <p><strong>User Name</strong>: <%= user.userName %></p>
              <p><strong>Email</strong>: <%= user.email %></p>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
          </div>
          <div class="m-5">
            <h2>Add a post</h2>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="form-label">Title</label>
                  <input type="text" class="form-control" id="title" name="title">
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Caption</label>
                <textarea class="form-control" id="caption" name="caption"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
          <div class="mt-5">
            <h2>Add an Event</h2>
            <form action="/event/createEvent" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="form-label">Event Name</label>
                  <input type="text" class="form-control" id="eventName" name="eventName">
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Address</label>
                <textarea class="form-control" id="Address" name="address"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Hours</label>
                <input class="form-control" id="Hours" name="hours"></input>
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Date</label>
                <input class="form-control" id="Date" name="date"></input>
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Uniform</label>
                <textarea class="form-control" id="Uniform" name="uniform"></textarea>
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Caterer</label>
                <input class="form-control" id="Caterer" name="caterer"></input>
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Event Captain</label>
                <input class="form-control" id="eventCaptain" name="eventCaptain"></input>
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Event Chef</label>
                <input class="form-control" id="eventChef" name="eventChef"></input>
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Waitstaff Needed</label>
                <input class="form-control" id="waitStaffNeeded" name="waitStaffNeeded"></input>
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Bartender Needed</label>
                <input class="form-control" id="bartenderNeeded" name="bartenderNeeded"></input>
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>  
      </div>  
    </div>
  </div>
</div>

<script>
  let profileLink = document.querySelector('#profilelink');
  profileLink.classList.add('active'); 
</script>

<%- include('partials/footer') -%>